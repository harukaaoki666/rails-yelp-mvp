
<%= form_for(@@@) do |f| %>
  <!-- バリデーションエラー時のみ、@product.errors に値があるので、エラーメッセージを表示する -->
  <% if @@@.errors.any? %>
    <div id="error_explanation">
      <h2><%= @@@@.errors.count %>件のエラーが発生しました。</h2>

      <ul>
      <% @@@.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
